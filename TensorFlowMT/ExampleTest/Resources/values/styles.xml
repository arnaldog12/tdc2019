<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="CustomTheme" parent="android:Theme.Material.Light.DarkActionBar">
    <item name="android:navigationBarColor">#0F62AC</item>
    <item name="android:colorPrimary">#0F62AC</item>
    <item name="android:colorPrimaryDark">#0A3D6B</item>
    <item name="android:colorAccent">#448AFF</item>
    <item name="android:buttonStyle">@style/CustomButton</item>
  </style>
  <style name="CustomButton" parent="android:style/Widget.Button">
    <item name="android:background">#0F62AC</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:padding">10dp</item>
  </style>
  <style name="CustomDialogStyle" parent="android:Theme.Material.Light.Dialog">
    <item name="android:colorAccent">#0F62AC</item>
  </style>
  <style name="CustomAlertStyle" parent="android:Theme.Material.Light.Dialog.Alert">
    <item name="android:colorAccent">#0F62AC</item>
  </style>
  
</resources>
